<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ECP - @ViewData["Title"]</title>
    <base href="/">
    <environment include="Development">
        <link rel="stylesheet" href="~/dist/lib/fontawesome-free-5.12.1/css/all.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/dist/css/ecp.main.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/dist/lib/fontawesome-free-5.12.1/css/all.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/dist/css/ecp.main.css" asp-append-version="true" />
    </environment>
    <script type="text/javascript" src="~/src/js/scripts/msflow-sdk.js"></script>
</head>
<body>
    @RenderBody()
    <environment include="Development">
        <script src="~/dist/js/ecp.main.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/js/ecp.main.js.gz" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
